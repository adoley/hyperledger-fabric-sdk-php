{
  "name": "americanexpress/hyperledger-fabric-sdk-php",
  "description": "Hyperledger fabric client SDK in PHP",
  "type": "library",
  "homepage": "http://americanexpress.io/",
  "keywords": ["hyperledger", "fabric", "sdk", "php", "grpc", "protobuf"],
  "license": "Apache-2.0",
  "config": {
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "AmericanExpress\\HyperledgerFabricClient\\": "src",
      "Google\\": "protobuf/dist/Google",
      "GPBMetadata\\": "protobuf/dist/GPBMetadata",
      "Hyperledger\\": "protobuf/dist/Hyperledger"
    }
  },
  "autoload-dev": {
    "classmap": [
      "test"
    ]
  },
  "require": {
    "php": "^7.1",
    "ext-grpc": "*",
    "google/protobuf": "^v3.3.0",
    "grpc/grpc": "^v1.3.0",
    "igorw/get-in": "^1.0",
    "mdanter/ecc": "^v0.4.2"
  },
  "require-dev": {
    "humbug/humbug": "1.0.x-dev",
    "jakub-onderka/php-parallel-lint": "*",
    "mikey179/vfsStream": "^1.6",
    "phpunit/phpunit": "*",
    "squizlabs/php_codesniffer": "*"
  },
  "scripts": {
    "build": "composer lint:syntax && composer lint:style && composer coverage && composer test:mutations",
    "lint:beautify": "vendor/bin/phpcbf --standard=PSR2 --extensions=php -v src/ test/",
    "lint:style": "vendor/bin/phpcs --standard=PSR2 --extensions=php -v src/ test/ --ignore=test/integration/config.php",
    "lint:syntax": "vendor/bin/parallel-lint src/ protobuf/dist/ test/",
    "protoc": "bin/compile-protos.sh",
    "test:integration": "vendor/bin/phpunit --testsuite integration",
    "test:mutations": "vendor/bin/humbug",
    "test:units": "vendor/bin/phpunit --testsuite unit",
    "coverage": "vendor/bin/phpunit --testsuite unit --coverage-text",
    "test": "vendor/bin/phpunit --testsuite unit"
  }
}
